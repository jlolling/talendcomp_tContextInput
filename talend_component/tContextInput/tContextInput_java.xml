<COMPONENT> 
  <HEADER AUTHOR="cimt AG" COMPATIBILITY="ALL" DATA_AUTO_PROPAGATE="false" PLATEFORM="ALL" RELEASE_DATE="20190815" SERIAL="" STARTABLE="true" STATUS="RELEASE" VERSION="1.1"> 
    <SIGNATURE/> 
  </HEADER>  
  <FAMILIES> 
    <FAMILY>Misc</FAMILY> 
  </FAMILIES>  
  <DOCUMENTATION> 
    <URL/> 
  </DOCUMENTATION>  
  <CONNECTORS> 
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>  
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" MAX_OUTPUT="1"/>  
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" MAX_OUTPUT="1"/>  
    <CONNECTOR CTYPE="COMPONENT_OK"/>  
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>  
    <CONNECTOR CTYPE="RUN_IF"/>  
    <CONNECTOR NAME="CONTEXT_VARIABLES" CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" LINE_STYLE="1"/> 
  </CONNECTORS>  
  <PARAMETERS> 
    <PARAMETER NAME="SCHEMA_CONTEXT_VARIABLES" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="5" CONTEXT="CONTEXT_VARIABLES"> 
      <TABLE READONLY="true"> 
        <COLUMN NAME="VAR_NAME" TYPE="id_String" READONLY="true" CUSTOM="true" LENGTH="128" KEY="true" NULLABLE="false" COMMENT="Name of the context variable"/>  
        <COLUMN NAME="VAR_VALUE" TYPE="id_String" READONLY="true" CUSTOM="true" KEY="false" NULLABLE="true" COMMENT="Value of the context variable"/>  
        <COLUMN NAME="CONFIGURED_IN_CURR_JOB" TYPE="id_Boolean" READONLY="true" CUSTOM="true" LENGTH="255" NULLABLE="true" COMMENT="Var is configured in current job"/>  
        <COLUMN NAME="IS_PROMPT" TYPE="id_Boolean" READONLY="true" CUSTOM="true" LENGTH="255" NULLABLE="true" COMMENT="Var is a prompt var"/>  
        <COLUMN NAME="SOURCE_FILE" TYPE="id_String" READONLY="true" CUSTOM="true" LENGTH="255" NULLABLE="true" COMMENT="From which file the value was finally load"/> 
      </TABLE> 
    </PARAMETER>  
    <PARAMETER NAME="LOAD_CONTEXT_FILES" FIELD="CHECK" NUM_ROW="10"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="LOAD_SINGLETON" FIELD="CHECK" NUM_ROW="10"> 
      <DEFAULT>true</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="CONTEXT_FILE_FILTERS" FIELD="TABLE" NUM_ROW="20" SHOW_IF="LOAD_CONTEXT_FILES == 'true'"> 
      <ITEMS> 
        <ITEM NAME="FILE_FILTER" FIELD="TEXT" VALUE="&quot;/path/to/dir/or/file&quot;"/>  
        <ITEM NAME="IGNORE_MISSING" FIELD="CHECK" VALUE="false"/> 
      </ITEMS> 
    </PARAMETER>  
    <PARAMETER NAME="DECRYPT_PASSWORDS" FIELD="CHECK" NUM_ROW="30" SHOW_IF="LOAD_CONTEXT_FILES == 'true'"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="ALLOW_FILE_INCLUDES" FIELD="CHECK" NUM_ROW="40" SHOW_IF="LOAD_CONTEXT_FILES == 'true'"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="FILE_INCLUDE_KEY_PATTERN" FIELD="TEXT" REQUIRED="true" NUM_ROW="40" SHOW_IF="(LOAD_CONTEXT_FILES == 'true') and (ALLOW_FILE_INCLUDES == 'true')"> 
      <DEFAULT>"^file_*"</DEFAULT> 
    </PARAMETER> 
  </PARAMETERS>  
  <ADVANCED_PARAMETERS> 
    <PARAMETER NAME="RELEASE_LABEL_20190815" FIELD="LABEL" COLOR="0;0;0" NUM_ROW="900">
      <DEFAULT>Release: 1.1 build at: 20190815</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>  
  <CODEGENERATION> 
    <IMPORTS> 
      <IMPORT NAME="jlo-talendcomp-contextinput" MODULE="jlo-talendcomp-contextinput-1.1.jar" REQUIRED="true"/>
      <IMPORT NAME="commons-io" MODULE="commons-io-1.3.2.jar" REQUIRED="true"/>
    </IMPORTS> 
  </CODEGENERATION>  
  <RETURNS> 
    <RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer"/> 
  </RETURNS>
</COMPONENT>
